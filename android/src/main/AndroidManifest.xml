<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT"/>
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_BASIC_PHONE_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_PHONE_CALL" />
    <application>
        <!-- Incoming call  -->
        <receiver
            android:name="com.maximilien0405.callkitonesignal.CallNotificationActionReceiver"
            android:enabled="true"
            android:exported="true"
            >
            <intent-filter android:priority="999">
                <action android:name="ConstantApp.CALL_RECEIVE_ACTION" />
                <action android:name="ConstantApp.CALL_CANCEL_ACTION"/>
            </intent-filter>
        </receiver>
        <service
            android:name="com.maximilien0405.callkitonesignal.CallNotificationService"
            android:enabled="true"
            android:stopWithTask="true"
            android:exported="true"
            android:foregroundServiceType="phoneCall"
            android:permission="android.permission.FOREGROUND_SERVICE">
        </service>

        <!-- OneSignal NotificationExtenderService to handle data-only VoIP pushes -->
        <service
            android:name="com.maximilien0405.callkitonesignal.OneSignalVoipExtenderService"
            android:exported="false"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>
</manifest>
